        <requirements>
            <requirement type="package" version="@TOOL_VERSION@">background-subtraction</requirement>
            <container type="docker">kbestak/background_sub:@TOOL_VERSION@</container>
        </requirements>
    </xml>

    <xml name="version_cmd">
        <version_command>echo @TOOL_VERSION@</version_command>
    </xml>
    <xml name="citations">
        <citations>
            <citation type="doi">10.1038/s41592-021-01308-y</citation>
